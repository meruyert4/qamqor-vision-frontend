{
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:web": "eslint web --ext .ts,.tsx,.js,.jsx",
    "lint:mobile": "eslint mobile --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:web": "prettier --write web",
    "format:mobile": "prettier --write mobile",
    "format:check": "prettier --check .",
    "install:all": "npm install && cd web && npm install && cd ../mobile && npm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.44.0"
  }
}
